<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="Sign in as:"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_ma_attendeeSignIn"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_ma_attendeeSignIn" />

    <Button
        android:id="@+id/btn_v_ma_djSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="320dp"
        android:text="DJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_ma_attendeeSignIn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_ma_attendeeSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="Attendee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_ma_djSignIn"
        app:layout_constraintTop_toTopOf="@+id/btn_v_ma_djSignIn" />
</androidx.constraintlayout.widget.ConstraintLayout>